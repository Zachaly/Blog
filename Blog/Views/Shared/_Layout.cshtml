<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <meta charset="utf-8" />
    <meta name="description" content="@ViewBag.Description" />
    <meta name="keywords" content="@ViewBag.Keywords" />
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
</head>
<body>
    <nav>
        <div>
            <a asp-controller="Home" asp-action="Index">Home</a>
            <a asp-controller="Home" asp-action="Index" asp-route-category="polish government">Polish government</a>
            <a asp-controller="Home" asp-action="Index" asp-route-category="zespol szkol lacznosci">ZSŁ</a>
            <a asp-controller="Home" asp-action="Index" asp-route-category="gaming">Gaming</a>
            <a asp-controller="Panel" asp-action="Index">Admin Panel</a>
            @if (User.Identity.IsAuthenticated)
            {
                <a asp-controller="Authorisation" asp-action="Logout">Logout</a>
            }
            else
            {
                <a asp-controller="Authorisation" asp-action="Login">Sign in</a>
            }
        </div>
    </nav>
    <div>
        @RenderBody()
    </div>
    @RenderSection("scripts", false)
</body>
</html>

@model PostViewModel

@{

}

<div>
    <form asp-controller="Panel" asp-action="Edit" method="post" enctype="multipart/form-data">
        <input asp-for="Id" type="hidden" />
        <div>
            <label>Title</label>
            <input asp-for="Title"/>
        </div>

        <div>
            <label>Description</label>
            <input asp-for="Description"/>
        </div>

        <div>
            <label>Category</label>
            <select asp-for="Category">
                <option value="gaming">Gaming</option>
                <option  value="polish government">Polish government</option>
                <option  value="zespol szkol lacznosci">Zespół Szkół Łączności</option>
            </select>
        </div>

        <div>
            <label>Tags</label>
            <input asp-for="Tags"/>
        </div>

        <div>
            <label>Body</label>
            <div id="editor"></div>
            <input asp-for="Body" type="hidden" id="body-input"/>
        </div>

        <div>
            <label>Image</label>
            <input asp-for="CurrentImage" type="hidden"/>
            <input asp-for="Image" />
        </div>

        <input type="submit" value="Submit" />
    </form>
</div>

@section scripts{
    <script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
    <script>
        var quill = new Quill('#editor', {
        theme: 'snow'
        });

        var form = document.querySelector("form");
        var hiddenInput = document.querySelector('#body-input');

        form.addEventListener('submit', function(e){
        hiddenInput.value = quill.root.innerHTML;
        });
    </script>
}
@model Post

@{

}

<h2 class="title">@Model.Title</h2>

<div class="center">
    <p class="post-body">
        @Model.Body
        <br />
        @if (!String.IsNullOrEmpty(Model.Image))
        {
        var imagePath = $"/Image/{Model.Image}";
        <img src="@imagePath"/>
        }
    </p>
</div>